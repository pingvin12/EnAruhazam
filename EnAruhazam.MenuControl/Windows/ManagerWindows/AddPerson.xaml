        xmlns:local="clr-namespace:EnAruhazam.MenuControl"
        mc:Ignorable="d"
        Title="AddPerson" Height="318" Width="500">

    <StackPanel>

        <Label Content="Id:" Margin="0,0,305,0"></Label>
        <TextBox Name="Id" Height="16" Margin="0,0,305,0"></TextBox>
        <Label Content="Person Name:" Margin="0,0,305,0"></Label>
        <TextBox Name="PersonName" Margin="0,0,305,0"></TextBox>
        <Label Content="JoinedDate:" Margin="0,0,305,0"></Label>
