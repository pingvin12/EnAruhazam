<Window x:Class="EnAruhazam.MenuControl.Windows.ManagerWindows.OptionWindows.EmailOptionsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnAruhazam.MenuControl.Windows.ManagerWindows.OptionWindows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <CheckBox Name="integration" Content="Email integráció" IsChecked="False" Unchecked="CheckBox_Unchecked" Checked="CheckBox_Checked"></CheckBox>
            <Label FontSize="14" FontWeight="Bold" Width="140" >Belépési Beállítások</Label>
            <Label>Email</Label>
            <TextBox IsReadOnly="true" Name="Email"></TextBox>
            <Label>Jelszó</Label>
            <TextBox IsReadOnly="true" Name="Password"></TextBox>
            <Button Click="Button_Click">Mentés</Button>
        </StackPanel>
    </Grid>
</Window>
