<Window x:Class="EnAruhazam.PeopleManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnAruhazam"
        mc:Ignorable="d"
        Title="PeopleManager" Height="450" Width="800">
    <Grid>
        <Label Content="HR" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <DataGrid IsReadOnly="True" Name="PeopleGrid" HorizontalAlignment="Left" Height="351" Margin="10,41,0,0" VerticalAlignment="Top" Width="501" SelectionChanged="PeopleGrid_SelectionChanged"/>
        <Button Name="Add" Content="Hozzáadás" HorizontalAlignment="Left" Margin="516,41,0,0" VerticalAlignment="Top" Width="75" Click="Add_Click"/>
        <Button Name="Remove" Content="Eltávolítás" HorizontalAlignment="Left" Margin="516,89,0,0" VerticalAlignment="Top" Width="75" Click="Remove_Click"/>
        <Button Name="Modify" Content="Módosítás" HorizontalAlignment="Left" Margin="516,64,0,0" VerticalAlignment="Top" Width="75" Click="Modify_Click"/>

    </Grid>
</Window>
